---
import { Image } from "astro:assets";

const {
  src,
  alt = "",
  ratio = "4 / 3",
  width = 1200,
  height = 675,
} = Astro.props;
---

<div class="project-image" style={`--ratio: ${ratio};`}>
  <Image src={src} alt={alt} width={width} height={height} format="webp" />
</div>

<style>
  .project-image {
    border-radius: 1.5rem;
    overflow: hidden;
    background: var(--gradient-subtle);
    box-shadow: var(--shadow-sm);
    aspect-ratio: var(--ratio);
  }

  .project-image :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
</style>
